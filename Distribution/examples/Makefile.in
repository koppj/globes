# The configure script should have replaced anything as required to
# obtain a working Makefile, which may serve as a template for own
# applications.
#
# This simple Makefile is for the GLoBES examples
#
# Compile example files with ``make example1'' etc.
#
# This Makefile assumes dynamic libraries, installed to either
# the default prefix /usr/local/ or to a user-defined directory 
# called ${prefix}.
#
# For linking against a specific version of GLoBES, libglobes.so can be 
# replaced by the respective library, such as libglobes.so.0.0.1


libdir = @libdir@
prefix = @prefix@
exec_prefix = @exec_prefix@


CFLAGS = -g -O4 
local_LDFLAGS = @GLBLDF@ -lstdc++
local_LTLDFLAGS = $(libdir)/libglobes.la $(libdir)/libglb.la -lstdc++
INCFLAGS = @GLBINC@


BIN = example-tour example-static example1 example2 example3 example4
OBJ = example-tour.o example1.o example2.o example3.o example4.o myio.o

example-tour: example-tour.o
	gcc $(CFLAGS) example-tour.o -o example-tour $(LDFLAGS) $(local_LDFLAGS) $(INCFLAGS)

example-static: example-tour.o
	../libtool --mode=link gcc example-tour.o -o example-static -all-static $(LDFLAGS)\
 $(local_LTLDFLAGS) $(INCFLAGS) 

example1: example1.o myio.o
	gcc $(CFLAGS) example1.o myio.o -o example1  $(LDFLAGS) $(local_LDFLAGS) $(INCFLAGS)

example2: example2.o myio.o
	gcc $(CFLAGS) example2.o myio.o -o example2  $(LDFLAGS) $(local_LDFLAGS) $(INCFLAGS)

example3: example3.o myio.o
	gcc $(CFLAGS) example3.o myio.o -o example3  $(LDFLAGS) $(local_LDFLAGS) $(INCFLAGS)

example4: example4.o myio.o
	gcc $(CFLAGS) example4.o myio.o -o example4  $(LDFLAGS) $(local_LDFLAGS) $(INCFLAGS)

# g++ is necessary because the syntax in the examples does not strictly
# follow ANSI C for pedagogical reasons

%.o : %.c
	g++ $(CFLAGS) -c $< $(INCFLAGS)
.PHONY: clean
clean:
	rm -f $(BIN) $(OBJ)
