# The configure script should have replaced anything as required to
# obtain a working Makefile, which may serve as a template for own
# applications.
#
# This simple Makefile is for the GLoBES examples
#
# Compile example files with ``make example1'' etc.
#
# This Makefile assumes dynamic libraries, installed to either
# the default prefix /usr/local/ or to a user-defined directory 
# called ${prefix}.
#
# For linking against a specific version of GLoBES, libglobes.so can be 
# replaced by the respective library, such as libglobes.so.0.0.1
#
# For using static libraries, see the README file.

GCFLAGS = -g -O4 
LDFLAGS = @GLBLDF@ -lstdc++
INCFLAGS = @GLBINC@
LTLDFLAGS = @LTGLBLDF@ -lstdc++ -all-static
LTDLOPEN= -dlopen @GLBMODULEPATH@/@GLBMODULES@
LTDEF= -DGLB_STATIC

BIN = example-tour example1 example2 example3 example4 example-static
OBJ = example-tour.o example1.o example2.o example3.o example4.o myio.o\
example-static.o



example-tour: example-tour.o
	gcc $(CFLAGS) $(GCFLAGS) example-tour.o -o example-tour $(LDFLAGS) $(INCFLAGS)

example-static: example-static.o
	libtool --mode=link g++ $(CFLAGS) example-static.o -o example-static\
$(LTLDFLAGS) $(INCFLAGS) $(LTDLOPEN)

example1: example1.o myio.o
	gcc $(CFLAGS) $(GCFLAGS) example1.o myio.o -o example1 $(LDFLAGS) $(INCFLAGS)

example2: example2.o myio.o
	gcc $(CFLAGS) $(GCFLAGS) example2.o myio.o -o example2 $(LDFLAGS) $(INCFLAGS)

example3: example3.o myio.o
	gcc $(CFLAGS) $(GCFLAGS) example3.o myio.o -o example3 $(LDFLAGS) $(INCFLAGS)

example4: example4.o myio.o
	gcc $(CFLAGS) $(GCFLAGS) example4.o myio.o -o example4 $(LDFLAGS) $(INCFLAGS)

example-static.o: example-tour.c
	g++ $(CFLAGS) $(GCFLAGS) $(LTDEF) -c example-tour.c -o\
 example-static.o $(INCFLAGS)

# g++ is necessary because the syntax in the examples does not strictly
# follow ANSI C for pedagogical reasons

%.o : %.c
	g++ $(CFLAGS) $(GCFLAGS) -c $< $(INCFLAGS)
.PHONY: clean
clean:
	rm $(BIN) $(OBJ)
